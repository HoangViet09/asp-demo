@model IEnumerable<Category>;
@{
    ViewData["Title"] = "Index";
}




<div class="container-lg pt-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary ">Create New Category <i class="bi bi-plus-circle ps-2"></i></a>
        </div>
    </div>
</div>

<table class="table table-bodered table-striped text-dark" style="width:100%">
    <thead>
        <tr>
            <th class="text-dark">Category name</th>
            <th class="text-dark">Display order</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td class="text-dark" width="50%">@obj.Name</td>
                <td class="text-dark" width="30%">@obj.DisplayOrder</td>
                <td>
                    <div class=" btn-group w-100" role="group">
                        <a asp-controller="category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-secondary "><i class="bi bi-pencil-square"></i> Edit</a>
                    </div>
                </td>
                <td>
                    <div class=" btn-group w-100" role="group">
                        <a asp-controller="category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger "><i class="bi bi-trash3-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>




