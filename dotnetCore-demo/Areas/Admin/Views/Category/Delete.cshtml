@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="Delete">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">Delete Category</h2>
                    <hr />
                </div>
                @* <div asp-validation-summary="All"></div> *@
                <input type="text" asp-for="Id" hidden>
                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" disabled class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="DisplayOrder"></label>
                    <input type="text" asp-for="DisplayOrder" disabled class="form-control">

                </div>
                <button type="submit" class="btn btn-danger p-2 text-white me-2" style="width: 100px">Delete</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-primary p-2 text-white" style="width: 100px">Back</a>
            </div>
        </form>

    </div>
</div>




